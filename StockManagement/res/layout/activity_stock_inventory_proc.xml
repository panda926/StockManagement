<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="top"
	    android:orientation="horizontal"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >
	    
        <TextView
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="바코드"
            />
        
        <EditText
            android:id="@+id/tbBarcode"
			android:layout_width="0dp"
            android:layout_weight="75"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:editable="false"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="top"
	    android:orientation="horizontal"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >
	    
        <TextView
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="상품명"
            />
        
        <EditText
            android:id="@+id/tbProductName"
			android:layout_width="0dp"
            android:layout_weight="75"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:editable="false"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="top"
	    android:orientation="horizontal"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >
	    
        <TextView
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="모델명"
            />
        
        <EditText
            android:id="@+id/tbModel"
			android:layout_width="0dp"
            android:layout_weight="75"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:editable="false"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="top"
	    android:orientation="horizontal"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >
	    
        <TextView
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="단가"
            />
        
        <EditText
            android:id="@+id/tbPrice"
			android:layout_width="0dp"
            android:layout_weight="75"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:editable="false"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="top"
	    android:orientation="horizontal"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >
	    
        <TextView
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="색상"
            />
        
        <EditText
            android:id="@+id/tbColor"
			android:layout_width="0dp"
            android:layout_weight="75"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:editable="false"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="top"
	    android:orientation="horizontal"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >
	    
        <TextView
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="재질"
            />
        
        <EditText
            android:id="@+id/tbMaterial"
			android:layout_width="0dp"
            android:layout_weight="75"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:editable="false"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="top"
	    android:orientation="horizontal"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >
	    
        <TextView
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="비고"
            />
        
        <EditText
            android:id="@+id/tbMemo"
			android:layout_width="0dp"
            android:layout_weight="75"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:editable="false"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="top"
	    android:orientation="horizontal"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >
	    
        <TextView
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="현재수량:"
            />
        
       <TextView
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="입력수량:"
            />
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="top"
	    android:orientation="horizontal"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >
	    
        <EditText
            android:id="@+id/tbNowQty"
			android:layout_width="0dp"
            android:layout_weight="75"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:inputType="number"
            android:layout_height="wrap_content"/>
            />
        
        <EditText
            android:id="@+id/tbQty"
			android:layout_width="0dp"
            android:layout_weight="75"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:inputType="numberSigned"
            android:selectAllOnFocus="true"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="top"
	    android:orientation="horizontal"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >
	    
        <Button
            android:layout_gravity="center_horizontal"
	        android:id="@+id/inventory_proc_btnOK"
	        android:layout_width="0dp"
	        android:layout_weight="50"
	        android:layout_height="wrap_content"
	        android:text="확인" 
	        android:background="@drawable/button_selector_back_blue"
	        android:textColor="@color/color_button_text"
        />
        
       <Button
            android:layout_gravity="center_horizontal"
	        android:id="@+id/inventory_proc_btnClose"
	        android:layout_width="0dp"
	        android:layout_weight="50"
	        android:layout_height="wrap_content"
	        android:text="닫기" 
	        android:background="@drawable/button_selector_back_blue"
	        android:textColor="@color/color_button_text"
        />
        
    </LinearLayout>

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}"
    
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"	    
	    android:orientation="horizontal" >
	    
        <TextView
            android:layout_width="0dp"
            android:layout_weight="33"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:text="현재창고"
            />
        
        <Spinner
	        android:id="@+id/cb_inventoryreplacenew_fromstore"
	        android:layout_width="0dp"
	        android:layout_weight="66"
	        android:layout_height="wrap_content" 
	        />
	    
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"	    
	    android:orientation="horizontal"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >
	    
        <TextView
            android:layout_width="0dp"
            android:layout_weight="33"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:text="이동창고"
            />
        
        <EditText
            android:id="@+id/edit_inventoryreplacenew_tostore"
			android:layout_width="0dp"
            android:layout_weight="66"
            android:singleLine="true"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:gravity="top"
	    android:orientation="horizontal"
	    android:focusable="true"
	    android:focusableInTouchMode="true" >
	    
        <Button
            android:layout_gravity="center_horizontal"
	        android:id="@+id/btn_replace_memo"
	        android:layout_width="0dp"
	        android:layout_weight="33"
	        android:layout_height="wrap_content"
	        android:text="메 모" 
	        android:background="@drawable/button_selector_back_blue"
	        android:textColor="@color/color_button_text"
        />
        
        <EditText
            android:id="@+id/edit_inventoryreplacenew_memo"
			android:layout_width="0dp"
            android:layout_weight="66"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:layout_height="fill_parent"/>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
        
        <Button
	        android:id="@+id/btn_inventoryreplacenew_list"
	        android:layout_width="0dp"
	        android:layout_weight="33"
	        android:layout_height="match_parent"
	        android:text="목 록" 
	        android:background="@drawable/button_selector_back_blue"
	        android:textColor="@color/color_button_text"
        />
        
        <Button
	        android:id="@+id/btn_inventoryreplacenew_ok"
	        android:layout_width="0dp"
	        android:layout_weight="33"
	        android:layout_height="match_parent"
	        android:text="확 인" 
	        android:layout_marginLeft="2dip"
	        android:background="@drawable/button_selector_back_blue"
	        android:textColor="@color/color_button_text"
        />
        
        <Button
	        android:id="@+id/btn_inventoryreplacenew_exit"
	        android:layout_width="0dp"
	        android:layout_weight="33"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="2dip"
	        android:text="닫 기" 
	        android:background="@drawable/button_selector_back_blue"
	        android:textColor="@color/color_button_text"
        />
        
    </LinearLayout>

</LinearLayout>
